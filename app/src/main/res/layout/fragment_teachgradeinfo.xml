<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_gradeinfofrg"
        android:text="成绩信息"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/at_share_gradeinfofrg"
        android:textSize="25sp"
        android:textColor="@color/bbutton_primary"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        fontawesometext:fa_icon="fa-share-square-o"/>
    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/at_link_gradeinfofrg"
        android:textSize="25sp"
        android:textColor="@color/bbutton_success"
        android:layout_toLeftOf="@id/at_share_gradeinfofrg"
        android:layout_alignBottom="@id/at_share_gradeinfofrg"
        android:layout_marginRight="10dp"
        fontawesometext:fa_icon="fa-link"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_gradeinfo"
        android:layout_below="@id/tv_title_gradeinfofrg"
        android:layout_marginTop="15dp"/>

</RelativeLayout>