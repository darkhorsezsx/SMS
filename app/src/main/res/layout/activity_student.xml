<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linear_im_student"
        android:layout_alignParentBottom="true">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bttn_addstudent_student"
            android:text="添加学生"
            android:layout_weight="1"
            bootstrapbutton:bb_icon_right="fa-plus"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bttn_editinfo_student"
            android:text="信息修改"
            android:layout_weight="1"
            bootstrapbutton:bb_icon_right="fa-edit"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bttn_myspace_student"
            android:text="我的空间"
            android:layout_weight="1"
            bootstrapbutton:bb_icon_right="fa-qq"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/framelayout_student"
        android:layout_above="@id/linear_im_student"
        android:layout_alignParentTop="true" />
</RelativeLayout>