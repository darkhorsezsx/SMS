<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_showid_chooselessoncard"
        android:text="课程号"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        />
id
    <TextView
        android:id="@+id/tv_id_chooselessoncard"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="2112"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tv_showid_chooselessoncard"
        android:layout_alignBaseline="@id/tv_showid_chooselessoncard"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_showname_chooselessoncard"
        android:text="课程名称"
        android:textSize="15sp"
        android:ellipsize="end"
        android:layout_toRightOf="@id/tv_id_chooselessoncard"
        android:layout_alignBaseline="@id/tv_showid_chooselessoncard"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_name_chooselessoncard"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="lesson"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/tv_showname_chooselessoncard"
        android:layout_alignBaseline="@id/tv_showid_chooselessoncard"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_showcredit_chooselesson"
        android:text="学分"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/tv_name_chooselessoncard"
        android:layout_alignBaseline="@id/tv_showid_chooselessoncard"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_credit_chooselessoncard"
        android:layout_toRightOf="@id/tv_showcredit_chooselesson"
        android:layout_alignBaseline="@id/tv_showid_chooselessoncard"/>

    <CheckBox
        android:id="@+id/cb_chooselessoncard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tv_credit_chooselessoncard"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        />

</RelativeLayout>